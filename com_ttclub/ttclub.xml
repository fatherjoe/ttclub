        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="languages/site">
        
			<language tag="de-DE">de-DE/de-DE.com_ttclub.ini</language>
    </languages>
    <administration>
        <menu img="components/com_ttclub/assets/images/s_com_ttclub.png" >COM_TTCLUB</menu>
        <submenu>
            
			<menu link="option=com_ttclub&amp;view=teams" view="teams" img="components/com_ttclub/assets/images/s_teams.png" alt="Ttclub/Teams">COM_TTCLUB_TITLE_TEAMS</menu>

			<menu link="option=com_ttclub&amp;view=schedule" view="schedule" img="components/com_ttclub/assets/images/s_schedule.png" alt="Ttclub/Schedule">COM_TTCLUB_TITLE_SCHEDULE</menu>

