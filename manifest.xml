<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>ttclub</name>
	<author>Jörg Vater</author>
	<authorEmail>joerg.vater@ttc-woeschbach.de</authorEmail>
	<authorUrl>http://www.ttc-woeschbach.de</authorUrl>
	<creationDate>2015-08-13</creationDate>
	<copyright>(C) 2015 TTC Wöschbach. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>1.0.0</version>
	<description>COM_TTCLUB_MANIFEST_DESCRIPTION</description>

	<files folder="site">
		<folder>controllers</folder>
		<filename>index.html</filename>
	</files> 

	<scriptfile>install.php</scriptfile>
	<languages folder="administrator/language">
		<language tag="de-DE">de-DE/de-DE.com_ttclub.ini</language>
	</languages>

	<administration>
		<menu link="option=com_ttclub" img="components/com_ttclub/assets/images/ttclub_icon.png">COM_ttclub</menu>
		<submenu>
			<menu view="settings" img="components/com_ttclub/assets/images/settings_icon.png" 
				alt="ttclub/Settings">COM_ttclub_SETTINGS</menu>
		</submenu>

		<files folder="administrator">
			<folder>sql</folder>
			<folder>language</folder>
			<folder>controllers</folder>
			<filename>index.html</filename>
		</files>  

		<languages folder="administrator/language">
			<language tag="de-DE">de-DE/de-DE.com_ttclub.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_ttclub.sys.ini</language>
		</languages>		
	</administration>
	
	<install>
  		<sql>
    		<file charset="utf8" driver="mysql">sql/ttclub.install.sql</file>
  		</sql>
	</install>
	<uninstall>
  		<sql>
    		<file charset="utf8" driver="mysql">sql/ttclub.uninstall.sql</file>
  		</sql>
	</uninstall>	
</extension>
